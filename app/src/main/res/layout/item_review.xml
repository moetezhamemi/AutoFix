<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Name and Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aleo_extrabold"
                android:text="User Name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btnEditReview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@color/gray"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/btnDeleteReview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="#D32F2F"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Review Comment -->
        <TextView
            android:id="@+id/reviewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/aleo_extrabold"
            android:text="Review comment text here"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/reviewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2 days ago"
            android:textColor="@color/gray"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
