<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".AddGarageActivity">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Garage"
            android:textColor="#1976D2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Form Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Photo Selection (Top) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/aleo_extrabold"
                android:text="Garage Photo"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivPhotoPreview"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_profile_placeholder"
                    app:civ_border_color="@color/sec"
                    app:civ_border_width="2dp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignBottom="@id/ivPhotoPreview"
                    android:layout_alignEnd="@id/ivPhotoPreview"
                    android:background="@drawable/circle_bg_blue"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@color/white" />

            </RelativeLayout>

            <Button
                android:id="@+id/btnSelectPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/sec"
                android:fontFamily="@font/aleo_extrabold"
                android:text="Select Photo"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPhotoError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:textColor="#D32F2F"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Location (Top) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_background"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_map"
                    app:tint="@color/sec"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/tvLocationStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="No location selected"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnGetLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/sec"
                    android:text="Get Location"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLocationError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:textColor="#D32F2F"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Garage Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/aleo_extrabold"
                android:text="Garage Name"
                android:textColor="@color/gray"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etGarageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter garage name..."
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvGarageNameError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:textColor="#D32F2F"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/aleo_extrabold"
                android:text="Phone"
                android:textColor="@color/gray"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etGaragePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter phone number..."
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvGaragePhoneError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:textColor="#D32F2F"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/aleo_extrabold"
                android:text="Description"
                android:textColor="@color/gray"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etGarageDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter description..."
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="12dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvGarageDescriptionError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:textColor="#D32F2F"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitGarage"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/sec"
                android:fontFamily="@font/aleo_extrabold"
                android:text="Submit Request"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="28dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
