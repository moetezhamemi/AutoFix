<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#E3F2FD">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Mechanic Photo -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mechanicPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Garage Name Label -->
        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/mechanicPhoto"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Garage Name Value -->
        <TextView
            android:id="@+id/mechanicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Mechanic Name"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/mechanicPhoto"
            app:layout_constraintTop_toBottomOf="@id/labelName" />

        <!-- Location Label -->
        <TextView
            android:id="@+id/labelLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Location"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/mechanicPhoto"
            app:layout_constraintTop_toBottomOf="@id/mechanicName" />

        <!-- Location Value -->
        <TextView
            android:id="@+id/mechanicLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="City, Country"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/mechanicPhoto"
            app:layout_constraintTop_toBottomOf="@id/labelLocation" />

        <!-- Accept Button -->
        <ImageView
            android:id="@+id/btnAccept"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/checkbox_on_background"
            app:tint="#4CAF50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:textColor="#4CAF50"
            android:textSize="10sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/btnAccept"
            app:layout_constraintBottom_toBottomOf="@id/btnAccept"
            app:layout_constraintTop_toTopOf="@id/btnAccept" />

        <!-- Reject Button -->
        <ImageView
            android:id="@+id/btnReject"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_delete"
            app:tint="#D32F2F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:textColor="#D32F2F"
            android:textSize="10sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/btnReject"
            app:layout_constraintBottom_toBottomOf="@id/btnReject"
            app:layout_constraintTop_toTopOf="@id/btnReject" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
