<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Garage Photo -->
        <ImageView
            android:id="@+id/garagePhoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/garagePhoto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Garage Name -->
                <TextView
                    android:id="@+id/garageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aleo_extrabold"
                    android:text="Garage Name"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <!-- Rating and Actions Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Star Icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/star_big_on"
                        app:tint="#FFC107" />

                    <!-- Rating Text -->
                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/aleo_extrabold"
                        android:text="4.8"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Review Count -->
                    <TextView
                        android:id="@+id/reviewCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:text="[140+ Review]"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />

                    <!-- Message Icon -->
                    <ImageView
                        android:id="@+id/btnMessage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_bg_blue"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_dialog_email"
                        app:tint="@color/white" />

                    <!-- Call Icon -->
                    <ImageView
                        android:id="@+id/btnCall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/circle_bg_blue"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="@color/white" />

                </LinearLayout>

                <!-- Description Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/aleo_extrabold"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/garageDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Description text here"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnReview"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/sec"
                        android:fontFamily="@font/aleo_extrabold"
                        android:text="Review"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="28dp" />

                    <Button
                        android:id="@+id/btnReportProblem"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="#D32F2F"
                        android:fontFamily="@font/aleo_extrabold"
                        android:text="Report a Problem"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="28dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
